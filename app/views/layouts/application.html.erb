<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/f64805a75d.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- ヘッダー -->
    <header class="mb-4">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <!-- 左側のロゴ -->
          <%= link_to "Bookers", root_path, class: "navbar-brand" %>

          <!-- ハンバーガーメニュー -->
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="メニュー切替">
            <span class="navbar-toggler-icon"></span>
          </button>

          <!-- ナビメニュー -->
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
              <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to root_path, class: "nav-link d-flex align-items-center" do %>
                    <i class="fa-solid fa-house me-1"></i>Home
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to users_path, class: "nav-link d-flex align-items-center" do %>
                    <i class="fa-solid fa-user me-1"></i>Users
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to books_path, class: "nav-link d-flex align-items-center" do %>
                    <i class="fa-solid fa-book me-1"></i>Books
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to destroy_user_session_path, method: :delete, class: "nav-link d-flex align-items-center" do %>
                    <i class="fa-solid fa-right-from-bracket me-1"></i>Log out
                  <% end %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to root_path, class: "nav-link d-flex align-items-center" do %>
                    <i class="fa-solid fa-house me-1"></i>Home
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to about_path, class: "nav-link d-flex align-items-center" do %>
                    <i class="fa-solid fa-link me-1"></i>About
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to new_user_registration_path, class: "nav-link d-flex align-items-center" do %>
                    <i class="fa-solid fa-user-plus me-1"></i>Sign up
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to new_user_session_path, class: "nav-link d-flex align-items-center" do %>
                    <i class="fa-solid fa-right-to-bracket me-1"></i>Log in
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <!-- メインコンテンツ -->
    <main class="container">
      <%= yield %>
    </main>

    <!-- フッター -->
    <footer class="text-center py-3 mt-4 bg-light">
      <p class="mb-0">CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>
