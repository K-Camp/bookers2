<body>
  <main class="container px-5 px-sm-0">
    <div class="row">
      <!-- 左カラム -->
      <%= render 'books/list', user: @user , book: @book%>

      <!-- 右カラム -->
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
              <tr>
                <td>
                  <% if user.image.attached? %>
                    <%= image_tag user.image, width: "80", height: "80" %>
                  <% else %>
                    <%= image_tag "no_image.jpg", width: "80", height: "80" %>
                  <% end %>
                </td>
                <td><%= user.name %></td>
                <td>
                  <%= link_to user_path(user.id) do %>
                    Show
                  <% end %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </main>
</body>

